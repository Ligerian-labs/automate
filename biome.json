{
  "$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
  "files": {
    "ignore": [
      "node_modules",
      ".turbo",
      "dist",
      "dist-types",
      "*.min.js",
      "apps/app/dist",
      "apps/web/dist",
      "apps/landing/.astro"
    ]
  },
  "organizeImports": { "enabled": true },
  "linter": {
    "enabled": true,
    "rules": { "recommended": true }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  }
}
