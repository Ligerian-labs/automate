{
  "name": "automate",
  "private": true,
  "packageManager": "bun@1.3.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel --filter=@automate/api --filter=@automate/landing --filter=@automate/app --filter=@automate/worker",
    "dev:api": "turbo run dev --filter=@automate/api",
    "dev:landing": "turbo run dev --filter=@automate/landing",
    "dev:app": "turbo run dev --filter=@automate/app",
    "dev:worker": "turbo run dev --filter=@automate/worker",
    "build": "turbo run build",
    "db:migrate": "bun run --filter @automate/api migrate",
    "db:seed": "bun run --filter @automate/api seed",
    "lint": "turbo run lint",
    "lint:fix": "biome check --fix .",
    "format": "biome format --write .",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/node": "^22.0.0",
    "turbo": "^2.8.10",
    "typescript": "^5.7.0"
  },
  "dependencies": {}
}
