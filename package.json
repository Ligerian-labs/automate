{
  "name": "stepiq",
  "private": true,
  "packageManager": "bun@1.3.4",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "dotenv -- turbo run dev --env-mode=loose --parallel --filter=@stepiq/api --filter=@stepiq/landing --filter=@stepiq/app --filter=@stepiq/worker",
    "dev:api": "turbo run dev --filter=@stepiq/api",
    "dev:landing": "turbo run dev --filter=@stepiq/landing",
    "dev:app": "turbo run dev --filter=@stepiq/app",
    "dev:worker": "turbo run dev --filter=@stepiq/worker",
    "build": "turbo run build",
    "db:migrate": "bun run --filter @stepiq/api migrate",
    "db:seed": "bun run --filter @stepiq/api seed",
    "lint": "turbo run lint",
    "lint:fix": "biome check --fix .",
    "format": "biome format --write .",
    "typecheck": "turbo run typecheck",
    "test": "bun test",
    "migrate": "dotenv -- bun run --filter=@stepiq/api migrate",
    "migration:generate": "dotenv -- bun run --filter=@stepiq/api migration:generate"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/node": "^22.0.0",
    "bun-types": "^1.3.9",
    "turbo": "^2.8.10",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "dotenv-cli": "^11.0.0"
  }
}
