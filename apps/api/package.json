{
  "name": "@stepiq/api",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "rm -rf dist && tsc -b",
    "start": "node dist/index.js",
    "migrate": "dotenv -e ../../.env -- drizzle-kit migrate",
    "migration:generate": "drizzle-kit generate --out drizzle --dialect postgresql --schema ./src/db/schema.ts",
    "rotate:master-key": "tsx src/scripts/rotate-master-key.ts",
    "seed": "tsx src/db/seed.ts",
    "lint": "biome lint src",
    "typecheck": "tsc -b",
    "test": "bun test"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.0",
    "@stepiq/core": "*",
    "bcrypt": "^5.1.0",
    "bullmq": "^5.30.0",
    "cron-parser": "^5.0.0",
    "drizzle-orm": "^0.38.0",
    "hono": "^4.7.0",
    "ioredis": "^5.4.0",
    "jose": "^6.0.0",
    "postgres": "^3.4.0",
    "posthog-node": "^5.26.0",
    "stripe": "^17.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "tsx": "^4.19.0",
    "drizzle-kit": "^0.30.0"
  }
}
