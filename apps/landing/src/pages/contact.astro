---
import Layout from "../layouts/Layout.astro";

const APP_URL = import.meta.env.PUBLIC_APP_URL || "http://localhost:5173";

const benefits = [
  {
    icon: `<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0110 0v4"/></svg>`,
    title: "SSO, SAML & SOC 2 compliance",
    desc: "Enterprise-grade security built in from day one",
  },
  {
    icon: `<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="8" rx="2" ry="2"/><rect x="2" y="14" width="20" height="8" rx="2" ry="2"/><line x1="6" y1="6" x2="6.01" y2="6"/><line x1="6" y1="18" x2="6.01" y2="18"/></svg>`,
    title: "Dedicated infrastructure & SLA",
    desc: "Isolated workers with guaranteed uptime for your pipelines",
  },
  {
    icon: `<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 00-3-3.87"/><path d="M16 3.13a4 4 0 010 7.75"/></svg>`,
    title: "Onboarding & priority support",
    desc: "Dedicated solutions engineer and <24h response times",
  },
  {
    icon: `<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10 13a5 5 0 007.54.54l3-3a5 5 0 00-7.07-7.07l-1.72 1.71"/><path d="M14 11a5 5 0 00-7.54-.54l-3 3a5 5 0 007.07 7.07l1.71-1.71"/></svg>`,
    title: "Custom model endpoints & integrations",
    desc: "Bring your own models and connect to internal systems",
  },
];

const teamSizes = ["1-10", "11-50", "51-200", "201-1000", "1000+"];
---

<Layout title="stepIQ — Contact Sales">
  <main class="landing">
    <header class="header">
      <div class="brand">
        <div class="logo-icon">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="8" height="8" rx="2"/><rect x="13" y="3" width="8" height="8" rx="2"/><rect x="3" y="13" width="8" height="8" rx="2"/><rect x="13" y="13" width="8" height="8" rx="2"/></svg>
        </div>
        <a href="/"><span>stepIQ</span></a>
      </div>
      <nav class="nav-links">
        <a href="/#features">Features</a>
        <a href="/#pricing">Pricing</a>
        <a href="/#docs">Docs</a>
        <a href="/#templates">Templates</a>
      </nav>
      <div class="actions">
        <a href={`${APP_URL}/login`} class="ghost-link">Log in</a>
        <a href={`${APP_URL}/register`} class="solid-link">Get Started</a>
      </div>
    </header>

    <section class="contact-page">
      <div class="contact-left">
        <div class="enterprise-badge"><span class="dot cyan"></span> Enterprise</div>
        <div class="contact-hero-text">
          <h1>Let's scale your<br />AI infrastructure</h1>
          <p class="contact-sub">Get a custom plan built for your team's workload, compliance requirements, and growth trajectory. Our solutions engineers will design the right architecture for you.</p>
        </div>
        <div class="benefits-list">
          {benefits.map((b) => (
            <div class="benefit-item">
              <div class="benefit-icon" set:html={b.icon} />
              <div class="benefit-text">
                <strong>{b.title}</strong>
                <p>{b.desc}</p>
              </div>
            </div>
          ))}
        </div>
        <div class="trusted-by">
          <span class="trusted-label">Trusted by teams at</span>
          <div class="trusted-logos">
            <span>Anthropic</span>
            <span>OpenAI</span>
            <span>Mistral</span>
            <span>Meta</span>
          </div>
        </div>
      </div>

      <div class="contact-right">
        <div class="form-card">
          <h2 class="form-title">Talk to our team</h2>
          <form method="POST" action="/api/contact">
            <div class="form-row">
              <div class="form-field">
                <label for="fname">First name</label>
                <input type="text" id="fname" name="firstName" placeholder="Jane" required />
              </div>
              <div class="form-field">
                <label for="lname">Last name</label>
                <input type="text" id="lname" name="lastName" placeholder="Smith" required />
              </div>
            </div>
            <div class="form-field">
              <label for="email">Work email</label>
              <input type="email" id="email" name="email" placeholder="jane@company.com" required />
            </div>
            <div class="form-row">
              <div class="form-field">
                <label for="company">Company</label>
                <input type="text" id="company" name="company" placeholder="Acme Inc." required />
              </div>
              <div class="form-field">
                <label for="teamSize">Team size</label>
                <select id="teamSize" name="teamSize" required>
                  <option value="" disabled selected>Select</option>
                  {teamSizes.map((size) => (
                    <option value={size}>{size}</option>
                  ))}
                </select>
              </div>
            </div>
            <div class="form-field">
              <label for="message">How can we help?</label>
              <textarea id="message" name="message" rows="4" placeholder="Tell us about your use case, team size, and any specific requirements..."></textarea>
            </div>
            <button type="submit" class="solid-link submit-btn">Get in touch <span class="arrow-icon">→</span></button>
          </form>
          <p class="privacy-note">By submitting, you agree to our <a href="/privacy">Privacy Policy</a>. We'll respond within one business day.</p>
        </div>
      </div>
    </section>

    <footer class="footer">
      <div class="footer-top">
        <div class="footer-brand">
          <div class="footer-logo-row">
            <div class="logo-icon">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="8" height="8" rx="2"/><rect x="13" y="3" width="8" height="8" rx="2"/><rect x="3" y="13" width="8" height="8" rx="2"/><rect x="13" y="13" width="8" height="8" rx="2"/></svg>
            </div>
            <span class="brand-name">stepIQ</span>
          </div>
          <p class="footer-tagline">Zapier for AI — AI-native, server-side,<br />and model-agnostic.</p>
        </div>
        <div class="footer-links">
          <div class="footer-col">
            <h4>Product</h4>
            <a href="/#features">Features</a>
            <a href="/#pricing">Pricing</a>
            <a href="/#templates">Templates</a>
            <a href="#">Changelog</a>
          </div>
          <div class="footer-col">
            <h4>Developers</h4>
            <a href="#">Documentation</a>
            <a href="#">API Reference</a>
            <a href="#">Status</a>
            <a href="#">GitHub</a>
          </div>
          <div class="footer-col">
            <h4>Company</h4>
            <a href="#">About</a>
            <a href="#">Blog</a>
            <a href="#">Privacy</a>
            <a href="#">Terms</a>
          </div>
        </div>
      </div>
      <div class="footer-divider"></div>
      <div class="footer-bottom">
        <p class="footer-copy">© 2026 Ligerian Labs. All rights reserved.</p>
        <div class="footer-social">
          <a href="#" aria-label="GitHub">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/></svg>
          </a>
          <a href="#" aria-label="X / Twitter">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
          </a>
          <a href="#" aria-label="LinkedIn">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </a>
        </div>
      </div>
    </footer>
  </main>
</Layout>
