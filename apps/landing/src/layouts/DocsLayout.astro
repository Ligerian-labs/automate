---
import "../styles/global.css";
import { DOCS_PAGES, getDocsPageByRoute } from "../lib/docs/content.js";

interface Props {
  title: string;
  breadcrumb?: { label: string; href?: string }[];
}

const { title, breadcrumb = [] } = Astro.props;

const currentPath = Astro.url.pathname;
const currentPage = getDocsPageByRoute(currentPath);
const referencePages = DOCS_PAGES;
const sectionLinks: { label: string; href: string; active: boolean }[] = currentPage
  ? currentPage.sections.map((section, index) => ({
      label: section.label,
      href: `${currentPage.route}#${section.id}`,
      active: index === 0,
    }))
  : [];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={`${title} — stepIQ Documentation`} />
    <title>{title} — stepIQ Docs</title>
  </head>
  <body>
    <div class="landing">
      <a class="skip-link" href="#docs-main">Skip to main content</a>

      <header class="header" aria-label="Primary">
        <a href="/" class="brand">
          <span class="logo-icon">⚡</span>
          stepIQ
        </a>
        <nav class="nav-links" aria-label="Main">
          <a href="/#features">Features</a>
          <a href="/#pricing">Pricing</a>
          <a href="/docs" aria-current={currentPath.startsWith("/docs") ? "page" : undefined}>Docs</a>
        </nav>
        <div class="actions">
          <a href="https://app.stepiq.sh" class="ghost-link">Log in</a>
          <a href="https://app.stepiq.sh" class="solid-link">Get Started</a>
        </div>
      </header>

      <div class="docs-layout">
        <aside class="docs-sidebar" aria-label="Documentation sidebar">
          {currentPage && (
            <div class="docs-sidebar-section">
              <p class="docs-sidebar-label">{currentPage.sidebarLabel}</p>
              <nav class="docs-sidebar-nav" aria-label={`${currentPage.title} sections`}>
                {sectionLinks.map((item) => (
                  <a
                    href={item.href}
                    class:list={["docs-sidebar-link", { active: item.active }]}
                    aria-current={item.active ? "location" : undefined}
                  >
                    {item.label}
                  </a>
                ))}
              </nav>
            </div>
          )}

          <div class="docs-sidebar-section">
            <p class="docs-sidebar-label">REFERENCE</p>
            <nav class="docs-sidebar-nav" aria-label="Documentation pages">
              {referencePages.map((page) => (
                <a
                  href={page.route}
                  class:list={["docs-sidebar-link", { active: page.route === currentPath }]}
                  aria-current={page.route === currentPath ? "page" : undefined}
                >
                  {page.title}
                </a>
              ))}
            </nav>
          </div>
        </aside>

        <main id="docs-main" class="docs-content" tabindex="-1">
          {breadcrumb.length > 0 && (
            <nav class="docs-breadcrumb" aria-label="Breadcrumb">
              {breadcrumb.map((item, i) => (
                <>
                  {i > 0 && <span class="docs-bc-sep" aria-hidden="true">/</span>}
                  {item.href ? <a href={item.href}>{item.label}</a> : <span aria-current="page">{item.label}</span>}
                </>
              ))}
            </nav>
          )}
          <slot />
        </main>
      </div>

      <footer class="footer">
        <div class="footer-top">
          <div class="footer-brand">
            <div class="footer-logo-row">
              <span class="logo-icon" style="width:1.75rem;height:1.75rem;font-size:0.7rem;">⚡</span>
              <span class="brand-name">stepIQ</span>
            </div>
            <p class="footer-tagline">Zapier for AI - AI-native, server-side, and model-agnostic.</p>
          </div>
          <div class="footer-links">
            <div class="footer-col">
              <h4>Product</h4>
              <a href="/#features">Features</a>
              <a href="/#pricing">Pricing</a>
            </div>
            <div class="footer-col">
              <h4>Developers</h4>
              <a href="/docs">Documentation</a>
              <a href="/docs/api-reference">API Reference</a>
            </div>
            <div class="footer-col">
              <h4>Company</h4>
              <a href="/privacy">Privacy</a>
              <a href="/terms">Terms</a>
            </div>
          </div>
        </div>
        <div class="footer-divider"></div>
        <div class="footer-bottom">
          <p class="footer-copy">© 2026 Ligerian Labs. All rights reserved.</p>
        </div>
      </footer>
    </div>
  </body>
</html>
