---
import "../styles/global.css";

interface Props {
  title: string;
  breadcrumb?: { label: string; href?: string }[];
}

const { title, breadcrumb = [] } = Astro.props;

const sidebarSections = [
  {
    label: "GETTING STARTED",
    items: [
      { title: "Introduction", href: "/docs/getting-started" },
      { title: "Prerequisites", href: "/docs/getting-started#prerequisites" },
      {
        title: "Your first pipeline",
        href: "/docs/getting-started#first-pipeline",
      },
      { title: "Run the pipeline", href: "/docs/getting-started#run" },
      { title: "View results", href: "/docs/getting-started#results" },
    ],
  },
  {
    label: "REFERENCE",
    items: [
      { title: "Pipeline Format", href: "/docs/pipeline-format" },
      { title: "API Reference", href: "/docs/api-reference" },
      { title: "Models & Pricing", href: "/docs/models-pricing" },
      { title: "Architecture", href: "/docs/architecture" },
    ],
  },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={`${title} — stepIQ Documentation`} />
    <title>{title} — stepIQ Docs</title>
  </head>
  <body>
    <div class="landing">
      <!-- Header -->
      <header class="header">
        <a href="/" class="brand">
          <span class="logo-icon">⚡</span>
          stepIQ
        </a>
        <nav class="nav-links">
          <a href="/#features">Features</a>
          <a href="/#pricing">Pricing</a>
          <a href="/docs">Docs</a>
        </nav>
        <div class="actions">
          <a href="https://app.stepiq.sh" class="ghost-link">Log in</a>
          <a href="https://app.stepiq.sh" class="solid-link">Get Started</a>
        </div>
      </header>

      <div class="docs-layout">
        <!-- Sidebar -->
        <aside class="docs-sidebar">
          {sidebarSections.map((sec) => (
            <div class="docs-sidebar-section">
              <p class="docs-sidebar-label">{sec.label}</p>
              <nav class="docs-sidebar-nav">
                {sec.items.map((item) => (
                  <a
                    href={item.href}
                    class:list={["docs-sidebar-link", { active: item.href === Astro.url.pathname }]}
                  >
                    {item.title}
                  </a>
                ))}
              </nav>
            </div>
          ))}
        </aside>

        <!-- Content -->
        <main class="docs-content">
          {breadcrumb.length > 0 && (
            <nav class="docs-breadcrumb">
              {breadcrumb.map((item, i) => (
                <>
                  {i > 0 && <span class="docs-bc-sep">/</span>}
                  {item.href ? (
                    <a href={item.href}>{item.label}</a>
                  ) : (
                    <span>{item.label}</span>
                  )}
                </>
              ))}
            </nav>
          )}
          <slot />
        </main>
      </div>

      <!-- Footer -->
      <footer class="footer">
        <div class="footer-top">
          <div class="footer-brand">
            <div class="footer-logo-row">
              <span class="logo-icon" style="width:1.75rem;height:1.75rem;font-size:0.7rem;">⚡</span>
              <span class="brand-name">stepIQ</span>
            </div>
            <p class="footer-tagline">Zapier for AI — AI-native, server-side, and model-agnostic.</p>
          </div>
          <div class="footer-links">
            <div class="footer-col">
              <h4>Product</h4>
              <a href="/#features">Features</a>
              <a href="/#pricing">Pricing</a>
            </div>
            <div class="footer-col">
              <h4>Developers</h4>
              <a href="/docs">Documentation</a>
              <a href="/docs/api-reference">API Reference</a>
            </div>
            <div class="footer-col">
              <h4>Company</h4>
              <a href="/privacy">Privacy</a>
              <a href="/terms">Terms</a>
            </div>
          </div>
        </div>
        <div class="footer-divider"></div>
        <div class="footer-bottom">
          <p class="footer-copy">© 2026 Ligerian Labs. All rights reserved.</p>
        </div>
      </footer>
    </div>
  </body>
</html>
